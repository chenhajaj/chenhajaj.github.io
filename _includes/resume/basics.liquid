{% assign basics = data %}
<div class="basics">
  <div class="name">{{ basics.name }}</div>
  <div class="contact-info">
    {% if basics.email %}
    <span><i class="fas fa-envelope"></i> {{ basics.email }}</span>
    {% endif %}
    {% if basics.url %}
    <span><i class="fas fa-globe"></i> <a href="{{ basics.url }}">{{ basics.url }}</a></span>
    {% endif %}
  </div>
  {% if basics.profiles %}
  <div class="social-links">
    {% for profile in basics.profiles %}
    <a href="{{ profile.url }}" class="social-link" target="_blank" rel="noopener noreferrer">
      <i class="fab fa-{{ profile.network | downcase }}"></i> {{ profile.network }}
    </a>
    {% endfor %}
  </div>
  {% endif %}
</div>

<style>
.basics {
  margin-bottom: 2rem;
}
.name {
  font-size: 2rem;
  font-weight: 500;
  color: #343a40;
  margin-bottom: 1rem;
}
.contact-info {
  margin-bottom: 0.5rem;
}
.contact-info span {
  margin-right: 1.5rem;
  color: #495057;
}
.contact-info i {
  margin-right: 0.5rem;
  color: #6c757d;
}
.social-links {
  margin-top: 0.5rem;
}
.social-link {
  margin-right: 1.5rem;
  color: #495057;
  text-decoration: none;
}
.social-link:hover {
  color: #007bff;
  text-decoration: none;
}
.social-link i {
  margin-right: 0.5rem;
}
</style>
