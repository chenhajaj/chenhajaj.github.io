{% assign basics = data %}
<div class="basics">
  <div class="profile">
    {% if basics.image %}
    <div class="profile-image">
      <img src="{{ basics.image | relative_url }}" alt="{{ basics.name }}" loading="lazy">
    </div>
    {% endif %}
    <div class="profile-info">
      <div class="name">{{ basics.name }}</div>
      {% if basics.label %}
      <div class="label">{{ basics.label }}</div>
      {% endif %}
      <div class="contact-info">
        {% if basics.email %}
        <span class="contact-item">
          <i class="fas fa-envelope"></i>
          <a href="mailto:{{ basics.email }}">{{ basics.email }}</a>
        </span>
        {% endif %}
        {% if basics.location.address %}
        <span class="contact-item">
          <i class="fas fa-building"></i>
          {{ basics.location.address }}
        </span>
        {% endif %}
      </div>
      {% if basics.profiles %}
      <div class="social-links">
        {% for profile in basics.profiles %}
        <a href="{{ profile.url }}" class="social-link" target="_blank" rel="noopener noreferrer">
          {% case profile.network %}
            {% when 'GitHub' %}
              <i class="fab fa-github"></i>
            {% when 'LinkedIn' %}
              <i class="fab fa-linkedin"></i>
            {% when 'Google Scholar' %}
              <i class="ai ai-google-scholar"></i>
            {% else %}
              <i class="fas fa-globe"></i>
          {% endcase %}
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.basics {
  margin-bottom: 2rem;
}

.profile {
  display: flex;
  gap: 2rem;
  align-items: center;
}

.profile-image {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  border: 3px solid var(--global-theme-color);
  flex-shrink: 0;
}

.profile-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.profile-info {
  flex-grow: 1;
}

.name {
  font-size: 2rem;
  font-weight: 600;
  color: var(--global-theme-color);
  margin-bottom: 0.5rem;
}

.label {
  font-size: 1.25rem;
  color: #495057;
  margin-bottom: 1rem;
}

.contact-info {
  margin-bottom: 1rem;
}

.contact-item {
  display: inline-flex;
  align-items: center;
  margin-right: 1.5rem;
  color: #495057;
}

.contact-item i {
  margin-right: 0.5rem;
  color: var(--global-theme-color);
}

.contact-item a {
  color: inherit;
  text-decoration: none;
}

.contact-item a:hover {
  color: var(--global-theme-color);
}

.social-links {
  display: flex;
  gap: 1rem;
}

.social-link {
  color: #495057;
  font-size: 1.5rem;
  transition: all 0.3s ease;
}

.social-link:hover {
  color: var(--global-theme-color);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .profile {
    flex-direction: column;
    text-align: center;
  }

  .profile-image {
    margin: 0 auto;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-item {
    margin-right: 0;
  }

  .social-links {
    justify-content: center;
  }
}
</style>
