{% assign education = data %}
<div class="education">
  {% for item in education %}
  <div class="education-item">
    <div class="entry-header">
      <div class="main-info">
        <h5 class="degree">{{ item.studyType }}{% if item.area %} in {{ item.area }}{% endif %}</h5>
        <div class="institution">{{ item.institution }}</div>
      </div>
      <div class="period">{{ item.endDate }}</div>
    </div>
    <div class="entry-details">
      {% if item.thesis %}
      <div class="detail-line thesis">
        <i class="fas fa-book"></i>
        <span class="label">Thesis:</span> 
        <span class="content"><em>{{ item.thesis }}</em></span>
      </div>
      {% endif %}
      {% if item.host or item.advisor %}
      <div class="detail-line">
        <i class="fas fa-user-tie"></i>
        <span class="label">{% if item.host %}Host{% else %}Advisor{% endif %}:</span>
        <span class="content">{{ item.host }}{{ item.advisor }}</span>
      </div>
      {% endif %}
    </div>
  </div>
  {% endfor %}
</div>

<style>
.education {
  margin-bottom: 1.5rem;
}

.education-item {
  margin-bottom: 1.5rem;
  padding-left: 0.75rem;
  border-left: 2px solid transparent;
  transition: all 0.2s ease;
}

.education-item:hover {
  border-left-color: #4b6cb7;
  background-color: rgba(75, 108, 183, 0.05);
  padding: 0.75rem;
  border-radius: 0.25rem;
}

.entry-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0.4rem;
}

.main-info {
  flex: 1;
}

.degree {
  color: #2d3748;
  font-weight: 600;
  font-size: 1.05rem;
  margin: 0 0 0.2rem 0;
}

.institution {
  color: #4a5568;
  font-size: 0.95rem;
  margin-bottom: 0.2rem;
}

.period {
  color: #718096;
  font-size: 0.9rem;
  white-space: nowrap;
  margin-left: 1rem;
}

.entry-details {
  margin-top: 0.4rem;
}

.detail-line {
  display: flex;
  align-items: baseline;
  color: #4a5568;
  font-size: 0.9rem;
  margin-bottom: 0.3rem;
  line-height: 1.4;
}

.detail-line i {
  color: #4b6cb7;
  width: 1rem;
  margin-right: 0.5rem;
  font-size: 0.85rem;
  text-align: center;
}

.label {
  font-weight: 600;
  margin-right: 0.4rem;
  color: #4a5568;
}

.content {
  color: #2d3748;
}

.thesis em {
  font-style: italic;
}

@media (max-width: 768px) {
  .entry-header {
    flex-direction: column;
  }
  
  .period {
    margin: 0.2rem 0 0 0;
  }
  
  .detail-line {
    padding-right: 0.5rem;
  }
}
</style>
